{
  "kind": "collectionType",
  "collectionName": "variations",
  "info": {
    "singularName": "variation",
    "pluralName": "variations",
    "displayName": "variation",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "stock": {
      "type": "integer"
    },
    "sale": {
      "type": "decimal"
    },
    "variantDescription": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variations"
    },
    "price": {
      "type": "component",
      "repeatable": false,
      "component": "product-price.price"
    }
  }
}
